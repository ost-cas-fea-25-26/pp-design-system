{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/__tests__/**",
    "**/__mocks__/**",
    ".storybook",
    "storybook-static",
    "node_modules"
  ]
}
