{
  "name": "@ost-cas-fea-25-26/pp-design-system",
  "version": "2.6.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "clean:lib": "rm -rf ./dist",
    "clean:storybook": "rm -rf ./storybook-static",
    "build:lib": "npm run clean:lib && npm run build:lib:esm && npm run build:lib:cjs && npm run copy-styles",
    "build:lib:esm": "tsc -p tsconfig.build-lib.esm.json",
    "build:lib:cjs": "tsc -p tsconfig.build-lib.cjs.json && mv dist/cjs/index.js dist/cjs/index.cjs",
    "copy-styles": "mkdir -p dist/styles && cp src/styles/tailwind.css dist/styles/tailwind.css",
    "build:storybook": "npm run clean:storybook && storybook build",
    "check:unused": "knip --config knip.config.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx && npm run type-check && npm run check:unused",
    "format": "prettier --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": [
    "dist/styles/*.css"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./styles": {
      "import": "./dist/styles/tailwind.css",
      "require": "./dist/styles/tailwind.css",
      "default": "./dist/styles/tailwind.css"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.64.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@smartive/eslint-config": "^6.4.0",
    "@smartive/prettier-config": "^3.1.2",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/react-vite": "^9.1.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.35.0",
    "eslint-plugin-storybook": "9.1.16",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.0",
    "knip": "^5.30.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "storybook": "^9.1.13",
    "typescript": "~5.9.0",
    "vite": "^7.1.6",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.0"
  }
}
