{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "stripInternal": true,
    "noEmit": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src", ".storybook", "vitest.config.*"],
  "exclude": [
    "dist",
    "storybook-static",
    "node_modules",
    "**/*.stories.*",
    "**/*.test.*",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
